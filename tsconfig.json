{
    "compilerOptions": {
        "target": "ES2022",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],

        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "types": ["vite/client"],

        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/vue/src/*"]
        }
    },
    "include": [
        "resources/vue/src/**/*.ts",
        "resources/vue/src/**/*.tsx",
        "resources/vue/src/**/*.vue"
    ]
}
